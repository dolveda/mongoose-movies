<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>  
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Release Year</th>
                <th>Rating</th>
                <th>Now Showing</th>
                <th>Cast</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= movie.title %></td>
                <td><%= movie.releaseYear %></td>
                <td><%= movie.mpaaRating %></td>
                <td><%= movie.nowShowing ?  'Yes' : 'Nope' %></td>
                <td>
                    <% movie.cast.forEach(c => { %>
                        <p><%= c %></p>
                   <% }) %>
                </td>
            </tr>
        </tbody>
    </table>
    <%- include('../partials/footer') %>
</body>
</html>